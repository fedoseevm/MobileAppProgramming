<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/tlo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_dlugosc_hasla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlugosc_hasla"
        android:textColor="@color/tekst"/>

    <SeekBar
        android:id="@+id/seekBar_ilosc_znakow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="6"
        android:max="20"
        android:progress="12"
        android:layout_marginHorizontal="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="6 znaków" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="20 znaków" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_male_litery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Małe litery" />
        <CheckBox
            android:id="@+id/cb_wielkie_litery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wielkie litery" />
        <CheckBox
            android:id="@+id/cb_cyfry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyfry" />
        <CheckBox
            android:id="@+id/cb_znaki_specjalne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Znaki specjalne" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Liczba haseł do wygenerowania: " />
    <Spinner
        android:id="@+id/spinner_liczba_hasel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"/>

    <RadioGroup
        android:id="@+id/rg_tryb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryb podstawowy" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryb mieszany" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tryb zaawansowany (min. 1 znak każdego typu)" />
    </RadioGroup>

    <Switch
        android:id="@+id/switch_ustawienia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Zapamiętaj ustawienia" />

    <Button
        android:id="@+id/btn_generuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERUJ"
        android:backgroundTint="@color/przycisk"/>

    <ImageView
        android:id="@+id/iv_sila_hasla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_wynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:textColor="@color/tekst" />

</LinearLayout>